---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script>
  import { darkMode } from "@store/state";

  const prefersTheme = () => {
    const prefersDarkScheme = window.matchMedia("(prefers-color-scheme: dark)");
    const prefersLightScheme = window.matchMedia(
      "(prefers-color-scheme: light)"
    );

    const darkTheme = "dark-theme";
    const lightTheme = "light-theme";

    if (localStorage.getItem("theme")) {
      if (localStorage.getItem("theme") === "dark") {
        document.body.classList.add(darkTheme);
        darkMode.set(true);
        return;
      }

      document.body.classList.add(lightTheme);
      darkMode.set(false);
      return;
    }

    if (prefersDarkScheme.matches) {
      document.body.classList.add(darkTheme);
      localStorage.setItem("theme", "dark");
      darkMode.set(true);

      return;
    }
    if (prefersLightScheme.matches) {
      document.body.classList.add(lightTheme);
      localStorage.setItem("theme", "light");
      darkMode.set(false);

      return;
    }
  };

  prefersTheme();
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="color-scheme" content="dark light" />
    <title>{title}</title>
  </head>
  <body class="">
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap");

  :root {
    color-scheme: light dark;
    /* shared */
    --red: #f74646;
    /* colors light */
    --light-blue: #0079ff;
    --light-blue2: #4b6a9b;
    --light-gray: #f6f8ff;
    --light-gray2: #697c9a;
    --light-white: #fefefe;
    --light-black: #2b3442;
    /* colors dark */
    --dark-blue: #0079ff;
    --dark-blue2: #1e2a47;
    --dark-white: #ffffff;
    --dark-black: #141d2f;
  }
  html {
    font-family: "Space Mono", monospace;
  }

  body {
    background-color: var(--light-gray);
    color: var(--light-black);
  }
  body.dark-theme {
    background-color: var(--dark-black);
    color: var(--dark-white);
  }

  @media (prefers-color-scheme: light) {
    /* defaults to light theme */
    body.dark-theme {
      background-color: var(--dark-black);
      color: var(--dark-white);
    }
    body.light-theme {
      background-color: var(--light-gray);
      color: var(--light-black);
    }

    body.dark-theme .header .header__button button {
      color: var(--dark-white);
    }

    body.dark-theme .card,
    body.dark-theme .form-search {
      background: var(--dark-blue2);
    }
    body.dark-theme .card .card__article .card__article-header h4 {
      color: var(--dark-blue);
    }

    body.dark-theme .card .card__article .card__article-stats {
      background: var(--dark-black);
    }
    body.dark-theme .links .links__block-one a,
    body.dark-theme .links .links__block-two a {
      color: var(--dark-white);
    }

    body.light-theme .header .header__button button {
      color: var(--light-black);
    }

    body.light-theme .card,
    body.light-theme .form-search {
      background: var(--light-white);
    }
    body.light-theme .card .card__article .card__article-header h4 {
      color: var(--dark-blue);
    }

    body.light-theme .card .card__article .card__article-stats {
      background: var(--light-gray);
    }
    body.light-theme .links .links__block-one a,
    body.light-theme .links .links__block-two a {
      color: var(--light-black);
    }
  }

  @media (prefers-color-scheme: dark) {
    /* defaults to dark theme */
    body.dark-theme {
      background-color: var(--dark-black);
      color: var(--dark-white);
    }
    body.light-theme {
      background-color: var(--light-gray);
      color: var(--light-black);
    }

    body.light-theme .header .header__button button {
      color: var(--light-black);
    }

    body.light-theme .card,
    body.light-theme .form-search {
      background: var(--light-white);
    }
    body.light-theme .card .card__article .card__article-header h4 {
      color: var(--dark-blue);
    }

    body.light-theme .card .card__article .card__article-stats {
      background: var(--light-gray);
    }
    body.light-theme .links .links__block-one a,
    body.light-theme .links .links__block-two a {
      color: var(--light-black);
    }

    body.dark-theme .header .header__button button {
      color: var(--dark-white);
    }

    body.dark-theme .card,
    body.dark-theme .form-search {
      background: var(--dark-blue2);
    }
    body.dark-theme .card .card__article .card__article-header h4 {
      color: var(--dark-blue);
    }

    body.dark-theme .card .card__article .card__article-stats {
      background: var(--dark-black);
    }
    body.dark-theme .links .links__block-one a,
    body.dark-theme .links .links__block-two a {
      color: var(--dark-white);
    }
  }

  body {
    height: 100vh;
    margin: 0;
    padding: 0;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
